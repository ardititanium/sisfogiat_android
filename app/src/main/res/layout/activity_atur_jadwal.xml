<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mipro.ard.penajdwalan.jadwal.atur_jadwal">


    <include
        android:id="@+id/bar_jadwal"
        layout="@layout/bar_jadwal" />

    <LinearLayout
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_below="@id/bar_jadwal"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/rounded_full"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/imageView19"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:src="@drawable/calendar_ic" />

            <TextView
                android:id="@+id/tgl_mulai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:hint="Tanggal Mulai"
                android:text="Tanggal Mulai" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/rounded_full"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/imageView20"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:src="@drawable/time_ic" />

            <TextView
                android:id="@+id/jamMulai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:hint="Jam Mulai"
                android:text="Jam Mulai" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/rounded_full"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/imageView21"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:src="@drawable/calendar_ic" />

            <TextView
                android:id="@+id/tgl_selesai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:hint="Tanggal Selesai"
                android:text="Tanggal Selesai" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/rounded_full"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/imageView22"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:src="@drawable/time_ic" />

            <TextView
                android:id="@+id/jam_selesai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:hint="Jam Selesai"
                android:text="Jam Selesai" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
