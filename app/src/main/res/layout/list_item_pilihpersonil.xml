<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/layout_holder_pilihpersonil"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center_vertical"
        android:paddingLeft="8dp"
        android:layout_marginBottom="0dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:background="@drawable/click_selector_pers"
        android:paddingRight="8dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginLeft="8dp">

            <TextView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="1"
                android:id="@+id/ic_pers_select"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:gravity="center_vertical|center_horizontal"
                android:textSize="14dp"
                android:textAlignment="center"
                android:layout_marginRight="8dp"
                android:textStyle="bold"
                android:background="@drawable/rounded_square" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="5"
                android:layout_height="match_parent"

                android:gravity="center_vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="New Text"
                    android:id="@+id/pangkat_pers_select"
                    android:textColor="@color/textColorAccent"
                    android:textSize="10dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="New Text"
                    android:id="@+id/nama_pers_select"
                    android:textSize="12dp"
                    android:textColor="@color/textColor"
                    android:layout_marginRight="16dp"
                    android:textStyle="normal" />

            </LinearLayout>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/nrp_per_select"
                android:textColor="@color/textColorAccent"
                android:textSize="10dp" />

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>