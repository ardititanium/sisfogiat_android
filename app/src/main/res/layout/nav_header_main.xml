<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:gravity="bottom"
    android:orientation="vertical"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/imageView24"
        android:scaleType="centerCrop"
        android:src="@drawable/header"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:paddingLeft="20dp"
        android:layout_alignBottom="@+id/imageView24"
        android:layout_alignLeft="@+id/imageView24"
        android:layout_alignStart="@+id/imageView24">

        <TextView
            android:id="@+id/namaUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/nav_header_vertical_spacing"
            android:text="nama"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/nrp_user"
            android:layout_toEndOf="@+id/nrp_user"
            android:textSize="16dp"
            android:textStyle="bold"
            android:paddingBottom="10dp" />

        <TextView
            android:id="@+id/nrp_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="nrp"
            android:layout_below="@+id/namaUser"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@drawable/rounded_square_y"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp" />
    </LinearLayout>

</RelativeLayout>
