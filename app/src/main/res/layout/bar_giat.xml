<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="250dp"
    android:background="@drawable/bg"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:id="@+id/layout_bottom"
        android:layout_width="fill_parent"
        android:layout_height = "wrap_content"
        android:background="#80000000">
        <ImageButton
            android:id = "@+id/kembali_btn"
            android:layout_width = "?android:attr/actionBarSize"
            android:layout_height = "?android:attr/actionBarSize"
            android:background="@android:color/transparent"
            android:src="@drawable/left_arr_ic"
            android:layout_alignParentLeft = "true"/>

        <TextView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/det_status_giat"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="28dp"
            android:layout_marginEnd="28dp" />

    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:layout_below="@id/layout_bottom"
        android:paddingLeft="60dp"
        android:paddingRight="20dp"
        android:background="#80000000"
        android:gravity="bottom"
        android:paddingBottom="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Small Text"
            android:id="@+id/det_kat_giat"
            android:layout_marginBottom="5dp"
            android:background="@drawable/rounded_square_d"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text"
            android:id="@+id/det_nama_giat"
            android:layout_marginBottom="5dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Medium Text"
            android:id="@+id/det_desk_giat"
            android:layout_marginBottom="5dp"
            android:textSize="14dp" />
    </LinearLayout>

</RelativeLayout>